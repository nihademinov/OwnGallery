<Page x:Class="Class_Practic_7._14date.Views.AddImage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Class_Practic_7._14date.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddImage">

    <Grid>
        <Image Margin="30,31,24,131" Name="SelectedImage" Source="{Binding path}"/>
        <Label Content="Select image" FontSize="18" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="100"/>
        <Button Width="200" Height="40" Content="Select" FontSize="18" VerticalAlignment="Bottom" Margin="50" Name="AddImagepage" Command="{Binding SelectButtonCommand}"/>

    </Grid>
</Page>
