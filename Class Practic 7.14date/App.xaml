<Application x:Class="Class_Practic_7._14date.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Class_Practic_7._14date"
             StartupUri="Views/FirstWindowView.xaml">
    <Application.Resources>

        <Style  TargetType="Button">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontFamily" Value="Sulphur Point"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#01133D" BorderBrush="#FFFFFF" BorderThickness="1" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ControlTemplate x:Key="customComboBox" TargetType="{x:Type ComboBox}">
            <Border x:Name="Border" BorderThickness="1" BorderBrush="#01133D" Background="White" CornerRadius="10">
                <ScrollViewer x:Name="PART_ContentHost" />
            </Border>
        </ControlTemplate>


    </Application.Resources>
</Application>
